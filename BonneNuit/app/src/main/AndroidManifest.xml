<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sa__yuu_.bonnenuit" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlarmActivity"
            android:label="@string/title_activity_alarm" >
        </activity>
        <activity
            android:name=".AlarmSettingActivity"
            android:label="@string/title_activity_alarm_setting" >
        </activity>
        <activity
            android:name=".AlarmNotificationActivity"
            android:label="@string/title_activity_alarm_nortification" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting" >
        </activity>

        <service
            android:name=".SensorService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".SetAlarmService"
            android:exported="false" >
        </service>
    </application>

</manifest>
